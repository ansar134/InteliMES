<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_floating_material_dark"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_floating_material_light"
            android:clickable="true"
            android:orientation="horizontal"
            android:onClick="onClickFleetLayout">

            <ImageView
                android:id="@+id/img_fleet_tracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/fleet_tracking_icon" />

            <TextView
                android:id="@+id/txtFleetTracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="@string/fleet_tracking" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_floating_material_light"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:showDividers="beginning"
            android:onClick="onClickScanItemLayout">

            <ImageView
                android:id="@+id/img_scan_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/scan_item" />

            <TextView
                android:id="@+id/txtScanItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="@string/scan_items" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_floating_material_light"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            android:showDividers="beginning">

            <ImageView
                android:id="@+id/img_reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/reports" />

            <TextView
                android:id="@+id/txtReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="@string/reports" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_floating_material_light"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            android:showDividers="beginning">

            <ImageView
                android:id="@+id/img_newMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/under_construction_icon" />

            <TextView
                android:id="@+id/txtNewMenuItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="@string/new_menu_item" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
